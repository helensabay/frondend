DJANGO_SECRET_KEY=change-me-in-prod
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=*

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Database (optional). Defaults to SQLite.
# To use MySQL, set:
# DJANGO_DB_ENGINE=mysql
# DJANGO_DB_NAME=technomart
# DJANGO_DB_USER=tm_user
# DJANGO_DB_PASSWORD=your-strong-pass
# DJANGO_DB_HOST=127.0.0.1
# DJANGO_DB_PORT=3306
# DJANGO_DB_CONN_MAX_AGE=60

# For Postgres (optional):
# DJANGO_DB_ENGINE=postgres
# DJANGO_DB_NAME=technomart
# DJANGO_DB_USER=tm_user
# DJANGO_DB_PASSWORD=your-strong-pass
# DJANGO_DB_HOST=127.0.0.1
# DJANGO_DB_PORT=5432
# DJANGO_DB_CONN_MAX_AGE=60

# For SQLite override only:
# DJANGO_DB_NAME=db.sqlite3

# JWT (optional overrides)
DJANGO_JWT_SECRET=
DJANGO_JWT_ALG=HS256
DJANGO_JWT_EXP_SECONDS=3600

# Frontend URL for emails
FRONTEND_BASE_URL=http://localhost:8080

# Password reset expiry (minutes)
PASSWORD_RESET_EXP_MIN=60

# Redis
REDIS_URL=redis://localhost:6379/0

# SMS (Twilio optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
SMS_DEFAULT_COUNTRY_CODE=+1
