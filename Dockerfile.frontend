FROM node:20-alpine

# Install dependencies once during build to prime npm cache.
WORKDIR /app
COPY package.json package-lock.json* ./
RUN npm config set legacy-peer-deps true
RUN npm ci || npm install

# Default command overridden by docker compose to support live reload.
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "8080"]
